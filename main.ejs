<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Notes</title>
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <div class="container">
    <h1>Notes</h1>
    <div class="notes-list">
      <% notes.forEach(note => { %>
        <div class="note">
          <a href="/note/view/<%= note.id %>"><%= note.title %></a> <!-- Correct link -->
          <form action="/delete-note" method="POST" class="delete-form">
            <input type="hidden" name="id" value="<%= note.id %>">
            <button type="submit">Delete</button>
          </form>
        </div>
      <% }) %>
    </div>    
    <a href="/note" class="add-note-btn">Add a Note</a>
  </div>
</body>
</html>
